            <% if @forecasts_am.empty?  %>
              <p> no data for this time</p>
            <% else %>
              <% @forecasts_am.each do |forecast| %>
                <%# card div %>
                <div class="col mb-4 px-3 text-center">
                  <div class="shadow rounded">
                    <div id="top-of-card" class="d-flex flex-column justify-content-center card-top ">
                      <h4 class="text-white"><%= forecast.source %></h4>
                      <div id="star-rating" class="mt-2 d-flex justify-content-center">
                          <% forecast.rating.times do %>
                          <i class="fas text-light fa-star ml-1"></i>
                          <% end %>
                          <% (5 - forecast.rating).times do %>
                          <i class="fas text-muted fa-star ml-1"></i>
                          <% end %>
                      </div>
                    </div>
                    <%# "card-content" %>
                    <div class="container card-content pt-3 px-4">
                      <%# wave-conditions %>
                      <div>
                        <h5> Wave Conditions</h5>
                        <div class="d-flex justify-content-between align-items-center px-3">
                          <div class="d-flex align-items-center">
                            <i class="fas fa-arrows-alt-v"></i>
                            <p class="pl-2"><%= forecast.wave_height %> m </p>
                          </div>
                          <div class="d-flex">
                            <i class="fas fa-wave-square" ></i>
                            <p class="pl-2"><%= forecast.period %> s </p>
                          </div>
                        </div>
                        <div class="d-flex justify-content-between">
                          <div class="d-flex align-center">
                            <% if forecast.swell_height < 50 %>
                              <p><%= image_tag("1-wave.svg",class: "picto-wave",style:"width: 20px; height: 20px")%></p>
                              <p class="pl-2"><%= forecast.wave_height%>m</p>
                            <% elsif forecast.swell_height < 150 %>
                              <p><%= image_tag("2-waves.svg",class: "picto-wave",style:"width: 20px; height: 20px")%></p>
                              <p class="pl-2"><%= forecast.wave_height%>m</p>
                            <% else %>
                              <p><%= image_tag("3-waves.svg",class: "picto-wave",style:"width: 20px; height: 20px")%></p>
                              <p class="pl-2"><%= forecast.wave_height%>m</p>
                            <% end %>
                          </div>
                          <div class="d-flex">
                            <p><i class="fas fa-arrow-down" style="transform: rotate(<%= forecast.swell_direction %>deg); -ms-transform: rotate(<%= forecast.swell_direction %>deg); -webkit-transform: rotate(<%= forecast.swell_direction %>deg);"></i>
                            <p class="pl-2"><%= forecast.swell_direction %> deg </p>
                          </div>
                        </div>
                      </div>
                      <hr style="width:50%;" class="text-center">
                      <div id="wind-conditions">
                        <h5> Wind Conditions</h5>
                        <div class="d-flex justify-content-between">
                          <div class="d-flex mb-4">
                            <i class="fas fa-wind pr-2"></i>
                            <p> <%= forecast.wind_speed %> kts </p>
                          </div>

                          <div class="d-flex">
                            <p><i class="fas fa-location-arrow" style="transform: rotate(<%= (forecast.wind_direction-210) %>deg); -ms-transform: rotate(<%= (forecast.wind_direction-210) %>deg); -webkit-transform: rotate(<%= (forecast.wind_direction-210) %>deg);"></i>
                            <p class="pl-2"> <%= forecast.wind_direction %> deg </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
