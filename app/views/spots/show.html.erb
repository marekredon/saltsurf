<div class="p-3" style="background-size: cover; background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 15, 50, 0.3)), url(<%= cl_image_path @spot.photos.first.key %>);">
  <%=  link_to "<< Back to list", spots_path, class: " btn btn-back" %>
  <div class="d-flex">
    <h3 class="mt-3 mb-5 font-weight-bold text-white"><%= @spot.name %></h3>
    <%# like button %>
    <div id="like-button">
      <% if user_signed_in? %>
        <% if current_user.spots.include? @spot %>
          <%= link_to spot_favorite_path(@spot), method: :delete, class: "text-decoration-none text-light" do%>
            <i class="fas fa-heart pt-2 ml-2 mt-2 text-danger text-sm"></i>
          <% end %>
        <% else %>
          <%= link_to spot_favorites_path(@spot), method: :post, class: "text-decoration-none text-light" do %>
            <i class="far fa-heart pt-2 ml-2 mt-2 text-secondary text-sm"></i>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to spot_favorites_path(@spot), method: :post, class: "text-decoration-none text-light" do %>
          <i class="far fa-heart pt-2 ml-2 mt-2 text-secondary text-sm"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <%=  link_to "Go Surf", spots_path, class: "mb-3 btn btn-danger" %>
</div>

<div class="container">
  <h4 class="my-3 text-primary text-center"> Today's Forecast</h4>
  <%# tabs %>
  <div class="btn-group btn-group-toggle mb-3 px-2" >
    <ul class="nav nav-pills" id="custom-tabs-name-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link default" id="morning-tab" data-toggle="pill" href="#morning" role="tab" aria-controls="morning" aria-selected="true">Morning</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="afternoon-tab" data-toggle="pill" href="#afternoon" role="tab" aria-controls="afternoon" aria-selected="false">Afternoon</a>
      </li>
    </ul>
  </div>

  <div class="row">
    <%# forecast-cards %>
    <div class="col-8 px-0 tab-content" id="custom-tabs-name-tabContent">
      <div class="row">
        <div class="col-12 px-2 ">
          <%# morning tab %>
          <div class="tab-pane fade bg-secondary show active" id="morning" role="tabpanel" aria-labelledby="morning-tab">
            <%= render '/spots/forecast_am' %>
          </div>
        </div>
        <div class="col-12 px-2 ">
          <%# afternoon tab %>
          <div class="tab-pane fade bg-danger" id="afternoon" role="tabpanel" aria-labelledby="afternoon-tab">
             <%= render '/spots/forecast_pm' %>
          </div>
        </div>
      </div>
    </div>
    <%# map on right side %>
    <div class="col">
      <%= image_tag('https://c8.alamy.com/comp/PYE035/amazing-birds-eye-view-with-turquoise-water-and-coastline-creating-an-interesting-muster-shot-on-the-coast-of-caprera-island-italy-PYE035.jpg', class: "img-thumbnail" ) %> 
    </div>
  </div>
