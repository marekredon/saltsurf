
<% content_for :meta_title, "#{@spot.name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @spot.description %>
<% content_for :meta_image, cl_image_path(@spot.photos.first.key) %>

<div class="p-3 px-4" style="background-size: cover; background-position: center; background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 15, 50, 0.3)), url(<%= cl_image_path @spot.photos.first.key %>);">
  <div class="container">
  <%=  link_to "Back to list", spots_path, class: "p-3 btn btn-back" %>
    <div class="d-flex">
      <h3 class="px-3 mt-3 mb-5 font-weight-bold text-white"><%= @spot.name %></h3>
      <%# like button %>
      <div id="like-button">
        <% if user_signed_in? %>
          <% if current_user.spots.include? @spot %>
            <%= link_to spot_favorite_path(@spot), method: :delete, class: "text-decoration-none text-light" do%>
              <i class="fas fa-heart pt-2 ml-2 mt-2 text-danger text-sm"></i>
            <% end %>
          <% else %>
            <%= link_to spot_favorites_path(@spot), method: :post, class: "text-decoration-none text-light" do %>
              <i class="far fa-heart pt-2 ml-2 mt-2 text-secondary text-sm"></i>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to spot_favorites_path(@spot), method: :post, class: "text-decoration-none text-light" do %>
            <i class="far fa-heart pt-2 ml-2 mt-2 text-secondary text-sm"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <%=  link_to "Go Surf", spot_sessions_path(@spot), method: :post, class: "mx-3 mb-3 btn btn-danger" %>
  </div>
</div>

<div class="container">
  <h3 class="my-3 text-primary text-center"> Today's Forecast</h3>

  <%# tabs %>
  <div class="btn-group btn-group-toggle mb-3 px-3" >
    <ul class="nav nav-pills" id="custom-tabs-name-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link custom-tab default active" id="morning-tab" data-toggle="pill" href="#morning" role="tab" aria-controls="morning" aria-selected="true">Morning</a>
      </li>
      <li class="nav-item">
        <a class="nav-link custom-tab" id="afternoon-tab" data-toggle="pill" href="#afternoon" role="tab" aria-controls="afternoon" aria-selected="false">Afternoon</a>
      </li>
    </ul>
  </div>
  <div class="row">
    <%# forecast-cards %>
    <div class = "col-sm-8">
      <div class="px-0 tab-content" id="custom-tabs-name-tabContent">
        <%# morning tab %>
        <div class="tab-pane fade show active" id="morning" role="tabpanel" aria-labelledby="morning-tab">
          <div class="container">
            <div class="row">
              <%= render '/spots/forecast_am' %>
            </div>
          </div>
        </div>
        <%# afternoon tab %>
        <div class="tab-pane fade" id="afternoon" role="tabpanel" aria-labelledby="afternoon-tab">
          <div class="container">
            <div class="row row-cols-2">
              <%= render '/spots/forecast_pm' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%# map on right side %>
    <div class="col-sm-4 text-center">
      <div id="map"
        style="width: 100%; height: 50%; position:sticky; top:0px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
