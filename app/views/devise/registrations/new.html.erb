<div class="container">

  <div class="container">
    <h2 class="text-center mt-5">Create your profile</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" },
                      placeholder:"Enter your name"%>
          <%= f.input :email,
                      required: true,
                      placeholder:"Enter your email",
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      placeholder:"Enter your password",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      placeholder:"Re - enter your password",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :photo, as: :file %>
      </div>

      <div class="form-actions text-center mb-5">
        <%= f.button :submit, "Sign up",class:"btn btn-lg btn-primary mt-5" %>
      </div>
      <% end %>
    </div>
  <%# redundant with navbar login button %>
  <%# <div class="container text-right pb-4">
   <%= render "devise/shared/links" %>
  <%# </div> %>
</div>
