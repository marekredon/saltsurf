<div class="mt-4 mb-4 container text-center border border-dark">
  <div class="mt-4 mb-4 container text-center border border-dark">
    <% if current_user %>
      <% if current_user.favorites %>
        <h3 class="text-dark"> Your Favorite Spots </h3>
      <% else %>
        <h3 class="text-dark"> The best spots right now </h3>
      <% end %>
    <% else %>
      <h3 class="text-dark"> The best spots right now </h3>
    <% end %>
  </div>
  <div class="container mt-2 border border-dark">
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 border border-dark">
      <% @spots.each do |spot| %>
        <div class="col mb-4 border border-dark">
          <%= link_to spot_path(spot), class: "text-decoration-none text-light" do %>
            <div class="border border-dark rounded p-3 height-set text-center vertical-align d-flex flex-column justify-content-center" style="background-size: cover; background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 15, 50, 0.3)), url(<%= cl_image_path spot.photos.first.key %>);">
              <h5 class="font-weight-bold"><%= spot.name %></h5>
              <div class="border border-dark mt-2 d-flex justify-content-center">
                <% spot.forecasts.first.rating.times do %>
                  <i class="fas text-light fa-star ml-1"></i>
                <% end %>
                <% (5 - spot.forecasts.first.rating).times do %>
                  <i class="fas text-muted fa-star ml-1"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
